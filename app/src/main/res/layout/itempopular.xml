<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5.7dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:id="@+id/nearbyimg1"
                android:src="@drawable/img1"/>
                <ImageView
                    android:layout_width="17.3dp"
                    android:layout_height="14.5dp"
                    android:src="@drawable/ic_like"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/nearbyimg2"/>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Wild Honey at Scotts Square"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="12.5dp"
                android:id="@+id/nearbytext1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="473 Keeling Station"
                android:layout_marginLeft="12.5dp"
                android:id="@+id/nearbytext2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="13.5dp"
                android:layout_marginLeft="12.5dp"
                android:layout_marginTop="6.7dp">

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:stepSize="0.1"
                    android:progressTint="@android:color/holo_red_dark"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:focusable="true"
                    android:rating="3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="238 reviews"
                    android:layout_marginLeft="8.6dp"
                    android:textSize="11.5dp"
                    android:id="@+id/nearbytext3"/>





            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</ScrollView>